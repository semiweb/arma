var id  = <%= @changelog.id %>

if(<%= params["update.x"].present? || !params['update'].nil?  %>){
    $($('#'+id+' textarea')[0]).attr("readonly", true);
    $('#'+id+' select').each(function() {
        this.setAttribute('disabled',true);
    });
    $('#edit-'+id).show();
    $('#save-'+id).hide();
}

if(<%= params[:action_to] == 'ignore' %>){
    $($('#'+id+' textarea')[0]).attr("disabled", true);
    $('#'+id+' select').each(function() {
        this.setAttribute('disabled',true);
    });
    $('#ignorebox-'+id).hide();
    $('#unignorebox-'+id).show();
}

if(<%= params[:action_to] == 'unignore' %>){
    $($('#'+id+' textarea')[0]).attr("disabled", false);
    $('#'+id+' select').each(function() {
        this.setAttribute('disabled',false);
    });
    $('#ignorebox-'+id).show();
    $('#unignorebox-'+id).hide();
}

