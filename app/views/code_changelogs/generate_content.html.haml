#installation
  %p
    = @installation.name
    = @installation.env
    = "#{@installation.location}" if @installation.location != 'undefined'
    \/ Code Changelog / Preview
#content
  = form_tag commit_application_installation_code_changelogs_path do
    - @changelogs_ids.each do |id|
      = hidden_field_tag('changelogs_ids[]', id)
    %table
      %tr
        %th{style: 'text-align: left'}
          = link_to 'Back', application_installation_code_changelogs_path(@installation.application_id, @installation), class: 'btn btn-success btn-form'
          = submit_tag('Commit', class: 'btn btn-success btn-form')
      %tr
        %td= simple_format(@content)
