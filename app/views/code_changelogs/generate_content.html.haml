#installation.changelogs
  %p.title
    = @installation.name
    = @installation.env
    = "#{@installation.location}" if @installation.location != 'undefined'
    \/ Code Changelog / Preview
  = form_tag commit_application_installation_code_changelogs_path, id: :commit_changelogs_form do
    - @changelogs_ids.each do |id|
      = hidden_field_tag 'changelogs_ids[]', id
    = link_to 'Back to list', application_installation_code_changelogs_path(@installation.application_id, @installation), class: 'btn btn-primary'
    = submit_tag 'Commit', class: 'btn btn-success'

#changelogs_content
  = simple_format(@content)
